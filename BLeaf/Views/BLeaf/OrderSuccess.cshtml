@{
    Layout = "~/Views/Shared/_LayoutBLeaf.cshtml";
}
<div class="page-content bg-white">
    <!-- Banner  -->
    <div class="dz-bnr-inr style-1 text-center bg-parallax" style="background-image:url('../bleaf/images/banner/bnr3.jpg'); background-size:cover; background-position:center; max-height: 200px; height: 100vh;">
        <div class="container">
            <div class="dz-bnr-inr-entry">
                <h1>Order Success</h1>
            </div>
        </div>
    </div>
    <!-- Banner End -->
    <!-- Order Success Section -->
    <section class="content-inner">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="alert alert-success" role="alert">
                        Your order has been placed successfully!
                    </div>
                    <p>Thank you for your purchase. You can download your order receipt below.</p>
                    <div class="d-flex justify-content-center">
                        <a href="@Url.Action("DownloadReceipt", "Order", new { orderId = ViewBag.OrderId })" class="btn btn-primary mx-2">Download Receipt</a>
                        <a href="@Url.Action("Index", "BLeaf")" class="btn btn-secondary mx-2">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Order Success Section End -->
</div>

@section bleaf_style
{
    <!-- Stylesheet -->
    <link href="~/bleaf/vendor/magnific-popup/magnific-popup.min.css" rel="stylesheet">
    <link href="~/bleaf/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/bleaf/vendor/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet">
}
