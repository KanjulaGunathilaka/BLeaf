    <script src="~/bleaf/js/custom.min.js"></script><!-- CUSTOM JS -->
    <script src="~/bleaf/js/jquery.star-rating-svg.js"></script><!-- Star Rating JS -->
    <script src="~/bleaf/vendor/rangeslider/rangeslider.js"></script><!-- CUSTOM JS -->
