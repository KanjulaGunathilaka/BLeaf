@model BLeaf.ViewModels.BLeafViewModel

@{
    Layout = "~/Views/Shared/_LayoutBLeaf.cshtml";
}

<div class="page-content bg-white">
    <div class="container mt-5">
        <button id="showAddDiscountForm" class="btn btn-primary mb-3">Add Discount</button>

        <div id="discountMessage" class="alert" style="display: none;"></div>

        <div id="addDiscountForm" style="display: none;">
            <h3 id="discountFormTitle">Enter Discount Details</h3>
            <form id="discountForm">
                <input type="hidden" id="discountId" name="discountId" />
                <div class="form-group">
                    <label for="discountCode">Discount Code:</label>
                    <input type="text" id="discountCode" name="discountCode" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="discountDescription">Description:</label>
                    <textarea id="discountDescription" name="discountDescription" class="form-control" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="discountAmount">Discount Amount:</label>
                    <input type="number" id="discountAmount" name="discountAmount" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="discountPercentage">Discount Percentage:</label>
                    <input type="number" id="discountPercentage" name="discountPercentage" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="validFrom">Valid From:</label>
                    <input type="date" id="validFrom" name="validFrom" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="validTo">Valid To:</label>
                    <input type="date" id="validTo" name="validTo" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="isActive">Is Active:</label>
                    <input type="checkbox" id="isActive" name="isActive" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <button id="submitDiscount" type="button" class="btn btn-primary">Submit Discount</button>
                    <button id="cancelDiscountEdit" type="button" class="btn btn-secondary" style="display: none;">Cancel</button>
                </div>
            </form>
        </div>

        <div id="discountTable" class="mt-3 table-responsive">
            <h3>View Discounts</h3>
            <table id="discountDataTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>DiscountId</th>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Percentage</th>
                        <th>Valid From</th>
                        <th>Valid To</th>
                        <th>Is Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var discount in Model.Discounts)
                    {
                        <tr>
                            <td>@discount.DiscountId</td>
                            <td>@discount.Code</td>
                            <td>@discount.Description</td>
                            <td>@discount.DiscountAmount</td>
                            <td>@discount.DiscountPercentage</td>
                            <td>@discount.ValidFrom?.ToString("yyyy-MM-dd")</td>
                            <td>@discount.ValidTo?.ToString("yyyy-MM-dd")</td>
                            <td>@discount.IsActive</td>
                            <td>
                                <div class="d-flex flex-wrap justify-content-between">
                                    <button class="btn btn-secondary edit-discount m-1" data-id="@discount.DiscountId">Edit</button>
                                    <button class="btn btn-danger delete-discount m-1" data-id="@discount.DiscountId">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

