@model IEnumerable<BLeaf.Models.Reservation>

@{
    Layout = "~/Views/Shared/_LayoutBLeaf.cshtml";
}

<div class="page-content bg-white">
    <!-- Banner  -->
    <div class="dz-bnr-inr style-1 text-center bg-parallax bg-parallax" style="background-image:url('../bleaf/images/banner/bnr1.jpg'); background-size:cover; background-position:center; max-height: 200px; height: 100vh;">
        <div class="container">
            <div class="dz-bnr-inr-entry">
                <h1>Manage Reservations</h1>
            </div>
        </div>
    </div>
    <!-- Banner End -->

    <div class="container mt-5">
        <div id="reservationMessage" class="alert" style="display: none;"></div>

        <div id="editReservationForm" style="display: none;">
            <h3 id="reservationFormTitle">Edit Reservation Status</h3>
            <form id="reservationForm">
                <input type="hidden" id="reservationId" name="reservationId" />

                <div class="form-group">
                    <label for="reservationStatus">Reservation Status:</label>
                    <select id="reservationStatus" name="reservationStatus" class="form-control">
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="form-group mt-3">
                    <button id="submitReservation" type="button" class="btn btn-primary">Update Reservation</button>
                    <button id="cancelReservationEdit" type="button" class="btn btn-secondary">Cancel</button>
                </div>
            </form>
        </div>

        <div id="reservationTable" class="mt-3 table-responsive">
            <h3>View Reservations</h3>
            <table id="reservationDataTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Reservation ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Number of People</th>
                        <th>Special Requests</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.ReservationId</td>
                            <td>@reservation.Name</td>
                            <td>@reservation.Email</td>
                            <td>@reservation.PhoneNumber</td>
                            <td>@reservation.NumberOfPeople</td>
                            <td>@reservation.SpecialRequests</td>
                            <td>@reservation.ReservationStatus</td>
                            <td>
                                <div class="d-flex flex-wrap justify-content-between">
                                    <button class="btn btn-secondary edit-reservation m-1" data-id="@reservation.ReservationId" data-status="@reservation.ReservationStatus">Edit</button>
                                    <button class="btn btn-danger delete-reservation m-1" data-id="@reservation.ReservationId">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

