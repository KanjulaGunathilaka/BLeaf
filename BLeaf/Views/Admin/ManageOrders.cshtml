@model IEnumerable<BLeaf.Models.Order>

@{
    Layout = "~/Views/Shared/_LayoutBLeaf.cshtml";
}

<div class="page-content bg-white">
    <!-- Banner  -->
    <div class="dz-bnr-inr style-1 text-center bg-parallax bg-parallax" style="background-image:url('../bleaf/images/banner/bnr1.jpg'); background-size:cover; background-position:center; max-height: 200px; height: 100vh;">
        <div class="container">
            <div class="dz-bnr-inr-entry">
                <h1>Order Management</h1>
            </div>
        </div>
    </div>
    <!-- Banner End -->

    <div class="container mt-5">
        <div id="orderMessage" class="alert" style="display: none;"></div>

        <div id="editOrderForm" style="display: none;">
            <h3 id="orderFormTitle">Edit Order Details</h3>
            <form id="orderForm">
                <input type="hidden" id="orderId" name="orderId" />
                <input type="hidden" id="orderUserId" name="orderUserId" />
                <input type="hidden" id="orderUserFullName" name="orderUserFullName" />
                <input type="hidden" id="orderUserEmail" name="orderUserEmail" />
                <input type="hidden" id="orderAddressId" name="orderAddressId" />
                <input type="hidden" id="orderTotal" name="orderTotal" />
                <input type="hidden" id="orderPlacedAt" name="orderPlacedAt" />
                <input type="hidden" id="orderEstimatedDelivery" name="orderEstimatedDelivery" />
                <input type="hidden" id="orderDeliveredAt" name="orderDeliveredAt" />

                <div class="form-group">
                    <label for="orderStatus">Order Status:</label>
                    <select id="orderStatus" name="orderStatus" class="form-control">
                        <option value="Pending">Pending</option>
                        <option value="Processing">Processing</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="paymentStatus">Payment Status:</label>
                    <select id="paymentStatus" name="paymentStatus" class="form-control">
                        <option value="Unpaid">Unpaid</option>
                        <option value="Paid">Paid</option>
                        <option value="Refunded">Refunded</option>
                    </select>
                </div>
                <div class="form-group mt-3">
                    <button id="submitOrder" type="button" class="btn btn-primary">Update Order</button>
                    <button id="cancelOrderEdit" type="button" class="btn btn-secondary">Cancel</button>
                </div>
            </form>
        </div>

        <div id="orderTable" class="mt-3 table-responsive">
            <h3>View Orders</h3>
            <table id="orderDataTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>OrderId</th>
                        <th>User</th>
                        <th>Address</th>
                        <th>Order Total</th>
                        <th>Order Status</th>
                        <th>Payment Status</th>
                        <th>Order Placed At</th>
                        <th>Estimated Delivery</th>
                        <th>Delivered At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.User.FullName</td>
                            <td>@order.Address?.AddressLine1</td>
                            <td>@order.OrderTotal</td>
                            <td>@order.OrderStatus</td>
                            <td>@order.PaymentStatus</td>
                            <td>@order.OrderPlacedAt</td>
                            <td>@order.EstimatedDelivery</td>
                            <td>@order.DeliveredAt</td>
                            <td>
                                <div class="d-flex flex-wrap justify-content-between">
                                    <button class="btn btn-secondary edit-order m-1" data-id="@order.OrderId">Edit</button>
                                    <button class="btn btn-danger delete-order m-1" data-id="@order.OrderId">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

