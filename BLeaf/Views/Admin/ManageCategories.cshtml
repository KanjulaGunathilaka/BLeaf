{
    <!-- JAVASCRIPT FILES ========================================= -->
    <script src="~/bleaf/js/jquery.min.js"></script><!-- JQUERY.MIN JS -->
    <script src="~/bleaf/vendor/bootstrap/js/bootstrap.bundle.min.js"></script><!-- BOOTSTRAP.MIN JS -->
