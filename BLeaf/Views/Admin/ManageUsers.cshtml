@model BLeaf.ViewModels.BLeafViewModel

@{
    Layout = "~/Views/Shared/_LayoutBLeaf.cshtml";
}

<div class="page-content bg-white">
    <!-- Banner  -->
    <div class="dz-bnr-inr style-1 text-center bg-parallax bg-parallax" style="background-image:url('../bleaf/images/banner/bnr1.jpg'); background-size:cover; background-position:center; max-height: 200px; height: 100vh;">
        <div class="container">
            <div class="dz-bnr-inr-entry">
                <h1>User Management</h1>
            </div>
        </div>
    </div>
    <!-- Banner End -->

    <div class="container mt-5">
        <button id="showAddUserForm" class="btn btn-primary mb-3">Add User</button>

        <div id="userMessage" class="alert" style="display: none;"></div>

        <div id="addUserForm" style="display: none;">
            <h3 id="userFormTitle">Enter User Details</h3>
            <form id="userForm">
                <input type="hidden" id="userId" name="userId" />
                <div class="form-group">
                    <label for="fullName">Full Name:</label>
                    <input type="text" id="fullName" name="fullName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="userEmail">Email:</label>
                    <input type="email" id="userEmail" name="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number:</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="billingAddress">Billing Address:</label>
                    <textarea id="billingAddress" name="billingAddress" class="form-control" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="role">Role:</label>
                    <select id="role" name="role" class="form-control">
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
                <button id="submitUser" type="button" class="btn btn-primary">Submit User</button>
                <button id="cancelUserEdit" type="button" class="btn btn-secondary" style="display: none;">Cancel</button>
            </form>
        </div>

        <div id="userTable" class="mt-3 table-responsive">
            <h3>View Users</h3>
            <table id="userDataTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>UserId</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Billing Address</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td class="text-truncate" data-toggle="tooltip" title="@user.FullName">@user.FullName</td>
                            <td class="text-truncate" data-toggle="tooltip" title="@user.Email">@user.Email</td>
                            <td class="text-truncate" data-toggle="tooltip" title="@user.PhoneNumber">@user.PhoneNumber</td>
                            <td class="text-truncate" data-toggle="tooltip" title="@user.BillingAddress">@user.BillingAddress</td>
                            <td class="text-truncate" data-toggle="tooltip" title="@user.Role">@user.Role</td>
                            <td>
                                <div class="d-flex flex-wrap justify-content-between">
                                    <button class="btn btn-secondary edit-user m-1" data-id="@user.UserId">Edit</button>
                                    <form asp-controller="Admin" asp-action="DeleteUser" method="post" class="m-1">
                                        <input type="hidden" name="email" value="@user.Email" />
                                        <button type="submit" class="btn btn-danger m-1">Delete</button>
                                    </form>
                                    <form asp-controller="Admin" asp-action="ChangeUserRole" method="post" class="m-1">
                                        <input type="hidden" name="email" value="@user.Email" />
                                        @Html.DropDownListFor(m => user.Role, new SelectList(Model.Roles, user.Role), new { @class = "form-control" })
                                        <button type="submit" class="btn btn-primary mt-1">Change Role</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

